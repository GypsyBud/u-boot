/dts-v1/;

/ {
	#address-cells = <1>;
	#size-cells = <1>;
	compatible = "mstar,msc313";
	
	memory@20000000 {
		device_type = "memory";
		reg = <0x20000000 0x4000000>;
	};

	aliases {
		spi0 = &spi_nor;
		serial = &pm_uart;
		eth0 = &emac;
	};

	chosen {
		stdout-path = &pm_uart;
	};

	cpus {
		#address-cells = <1>;
		#size-cells = <0>;

		cpu@0 {
			device_type = "cpu";
			compatible = "arm,cortex-a7";
			reg = <0x0>;
		};
	};

	soc {
		compatible = "simple-bus";
		#address-cells = <1>;
		#size-cells = <1>;
		ranges;
		u-boot,dm-pre-reloc;

		spi_nor: spi_nor@1f001000 {
			compatible = "mstar,msc313-spinor";
			#address-cells = <1>;
			#size-cells = <0>;
			u-boot,dm-pre-reloc;
			reg-names = "reg_base", "mem_base";
			reg = <0x1f001000 0x400>, <0x14000000 0x2000000>;
			spi-half-duplex;
			spi_flash@0{
				u-boot,dm-pre-reloc;
				compatible = "jedec,spi-nor";
				reg = <0>;
			};
		};

		pm_uart: uart@1f221000 {
			compatible = "ns16550a";
			u-boot,dm-pre-reloc;
			reg = <0x1f221000 0x200>;
			reg-shift = <3>;
			clock-frequency = <172000000>;
		};
		
		clk_emac: clk-sysin {
			#clock-cells = <0>;
			compatible = "fixed-clock";
			clock-frequency = <144000000>;
			u-boot,dm-pre-reloc;
		};
		
		emac: emac@1f2a2000 {
			compatible = "mstar,msc313-emac";
			reg = <0x1f2a2000 0x4000>;
			phy-mode = "mii";
			clocks = <&clk_emac>;
		};
	};
};
